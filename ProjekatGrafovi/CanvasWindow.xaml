        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjekatGrafovi"
        mc:Ignorable="d"
        Title="CanvasWindow" Height="805" Width="805">
    <Grid Background="#004D4F">
        <ScrollViewer Name="zoomScrollViewer" Margin="5" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="canvasWindow" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="800" Width="800">

            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>
